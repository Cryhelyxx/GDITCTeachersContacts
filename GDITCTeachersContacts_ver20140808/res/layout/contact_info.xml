<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include layout="@layout/info_custom_title_bar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/default_bg"
        android:fillViewport="true" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin" >

            <ImageView
                android:id="@+id/info_contact_icon"
                android:layout_width="80dip"
                android:layout_height="80dip"
                android:layout_gravity="center_horizontal"
                android:contentDescription="@string/descImage"
                android:src="@drawable/defaulthead" />

            <TextView
                android:id="@+id/info_contact_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="7dip"
                android:text="@string/contact_name"
                android:textColor="#fff"
                android:textSize="18sp"
                android:textStyle="normal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dip"
                android:background="@drawable/layout_bg"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dip"
                    android:orientation="horizontal"
                    android:padding="5dip" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="@string/contact_telPhone"
                        android:textColor="#f00"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/info_contact_telPhone"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="20dip"
                        android:layout_weight="2"
                        android:singleLine="true"
                        android:text="@string/contact_telPhone"
                        android:textColor="#000"
                        android:textSize="16sp" />

                    <Button
                        android:id="@+id/btn_telPhone_call"
                        android:layout_width="30dip"
                        android:layout_height="30dip"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/contact_call_selector"
                        android:gravity="right"
                        android:padding="5dip" />

                    <Button
                        android:id="@+id/btn_telPhone_sms"
                        android:layout_width="30dip"
                        android:layout_height="30dip"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="20dip"
                        android:layout_marginRight="5dip"
                        android:background="@drawable/contact_sms_selector"
                        android:gravity="right"
                        android:padding="5dip" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dip"
                    android:background="@drawable/list_divider_holo_dark" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dip"
                    android:orientation="horizontal"
                    android:padding="5dip" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="@string/contact_cornet"
                        android:textColor="#f00"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/info_contact_cornet"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="20dip"
                        android:layout_weight="2"
                        android:singleLine="true"
                        android:text="@string/contact_cornet"
                        android:textColor="#000"
                        android:textSize="16sp" />

                    <Button
                        android:id="@+id/btn_cornet_call"
                        android:layout_width="30dip"
                        android:layout_height="30dip"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/contact_call_selector"
                        android:padding="5dip" />

                    <Button
                        android:id="@+id/btn_cornet_sms"
                        android:layout_width="30dip"
                        android:layout_height="30dip"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="20dip"
                        android:layout_marginRight="5dip"
                        android:background="@drawable/contact_sms_selector"
                        android:padding="5dip" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dip"
                    android:background="@drawable/list_divider_holo_dark" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dip"
                    android:orientation="horizontal"
                    android:padding="5dip" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="@string/contact_group"
                        android:textColor="#f00"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/info_contact_group"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="20dip"
                        android:text="@string/contact_group"
                        android:textColor="#000"
                        android:textSize="16sp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dip"
                    android:background="@drawable/list_divider_holo_dark" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dip"
                    android:orientation="horizontal"
                    android:padding="5dip" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="@string/contact_email"
                        android:textColor="#f00"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/info_contact_email"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="20dip"
                        android:layout_weight="2"
                        android:singleLine="true"
                        android:text="@string/contact_email"
                        android:textColor="#000"
                        android:textSize="16sp" />

                    <Button
                        android:id="@+id/btn_contact_email"
                        android:layout_width="35dip"
                        android:layout_height="35dip"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="20dip"
                        android:layout_marginRight="5dip"
                        android:background="@drawable/btn_contact_email"
                        android:padding="5dip" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dip"
                    android:background="@drawable/list_divider_holo_dark" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dip"
                    android:orientation="horizontal"
                    android:padding="5dip" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="@string/contact_address"
                        android:textColor="#f00"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/info_contact_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="20dip"
                        android:singleLine="false"
                        android:text="@string/contact_address"
                        android:textColor="#000"
                        android:textSize="16sp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dip"
                    android:background="@drawable/list_divider_holo_dark" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dip"
                    android:orientation="horizontal"
                    android:padding="5dip" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="@string/contact_birthday"
                        android:textColor="#f00"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/info_contact_birthday"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="20dip"
                        android:singleLine="true"
                        android:text="@string/contact_birthday"
                        android:textColor="#000"
                        android:textSize="16sp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dip"
                    android:background="@drawable/list_divider_holo_dark" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="5dip" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="10dip"
                        android:text="@string/contact_description"
                        android:textColor="#f00"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/info_contact_description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="10dip"
                        android:layout_marginBottom="10dip"
                        android:singleLine="false"
                        android:text="@string/contact_description"
                        android:textColor="#000"
                        android:textSize="16sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dip"
                        android:background="@drawable/list_divider_holo_dark" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="100dip"
                        android:orientation="vertical"
                        android:padding="5dip" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="10dip"
                            android:text="@string/contact_info_share_to"
                            android:textColor="#f00"
                            android:textSize="14sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_gravity="center_horizontal"
                            android:gravity="center_horizontal" >

                            <Button
                                android:id="@+id/contact_info_btn_shareToSystemContacts"
                                android:layout_width="49dip"
                                android:layout_height="49dip"
                                android:layout_gravity="center_vertical"
                                android:layout_margin="10dip"
                                android:background="@drawable/btn_system_contacts"
                                android:padding="5dip" />
                            <Button
                                android:id="@+id/contact_info_btn_shareToEmail"
                                android:layout_width="45dip"
                                android:layout_height="45dip"
                                android:layout_margin="10dip"
                                android:layout_gravity="center_vertical"
                                android:background="@drawable/btn_email"
                                android:padding="5dip" />
                            <Button
                                android:id="@+id/contact_info_btn_shareToWeixinFrientCircle"
                                android:layout_width="40dip"
                                android:layout_height="40dip"
                                android:layout_margin="10dip"
                                android:layout_gravity="center_vertical"
                                android:background="@drawable/btn_weixin"
                                android:padding="5dip" />
                            <Button
                                android:id="@+id/contact_info_btn_shareToMore"
                                android:layout_width="45dip"
                                android:layout_height="45dip"
                                android:layout_margin="10dip"
                                android:layout_gravity="center_vertical"
                                android:background="@drawable/btn_share_more"
                                android:padding="5dip" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>