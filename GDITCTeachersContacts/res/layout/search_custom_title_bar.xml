<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dip"
    android:layout_gravity="center_horizontal"
    android:background="@drawable/topbar" >

    <Button
        android:id="@+id/btn_back_search"
        android:layout_width="69dip"
        android:layout_height="40dip"
        android:layout_centerVertical="true"
        android:background="@drawable/button_back_selector" />

    <TextView
        android:id="@+id/title_searchContact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dip"
        android:layout_toRightOf="@+id/btn_back_search"
        android:drawablePadding="4dp"
        android:text="@string/title_search_contact"
        android:textColor="#FFF"
        android:textSize="16sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/search_title_bar_btn_add_contact"
        android:layout_width="40dip"
        android:layout_height="40dip"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/btn_add_contact_selector" />

</RelativeLayout>